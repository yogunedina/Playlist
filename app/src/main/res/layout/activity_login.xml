<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5c7ba">


    <EditText
        android:id="@+id/editText5"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/chivo"
        android:foregroundTint="#fefdff"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:textColor="#474647"
        android:textColorHint="#604E4949" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText5"
        android:layout_alignEnd="@id/editText5"
        android:layout_alignRight="@id/editText5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/chivo"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="#604E4949" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="64dp"
        android:text="@string/attempt_text"
        android:textSize="24dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:layout_alignParentBottom="false"
        android:layout_marginEnd="-224dp"
        android:layout_marginRight="-225dp"
        android:layout_marginBottom="-35dp"
        android:layout_toStartOf="@id/textView2"
        android:layout_toLeftOf="@id/textView"
        android:backgroundTint="#9A2196F3"
        android:fontFamily="@font/changa_one"
        android:text="@string/Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="22dp"
        android:text="@string/credentials" />


</RelativeLayout>
